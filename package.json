{
	"name": "brew-vscode",
	"displayName": "brew-vscode",
	"publisher": "GunniBusch",
	"description": "VS Code extension for Homebrew developer commands",
	"keywords": ["homebrew", "brew", "formula", "cask", "tap"],
	"repository": {
		"url": "https://github.com/GunniBusch/brew-vscode"
	},
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.103.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "homebrew.styleFix",
				"title": "Homebrew: Fix Style",
				"icon": "$(wand)"
			},
			{
				"command": "homebrew.installSource",
				"title": "Homebrew: Install from Source",
				"icon": "$(package)"
			},
			{
				"command": "homebrew.audit",
				"title": "Homebrew: Audit Formula",
				"icon": "$(check)"
			},
			{
				"command": "homebrew.info",
				"title": "Homebrew: Info (brew info)",
				"icon": "$(info)"
			},
			{
				"command": "homebrew.livecheck",
				"title": "Homebrew: Livecheck (brew livecheck)"
			},
			{
				"command": "homebrew.depsTree",
				"title": "Homebrew: Dependency Tree (brew deps --tree)"
			},
			{
				"command": "homebrew.create",
				"title": "Homebrew: Create Formula (brew create)"
			},
			{
				"command": "homebrew.test",
				"title": "Homebrew: Test Formula",
				"icon": "$(beaker)"
			},
			{
				"command": "homebrew.edit",
				"title": "Homebrew: Edit Formula (brew edit)"
			},
			{
				"command": "homebrew.openFocusedWorkspace",
				"title": "Homebrew: Open Focused Workspace..."
			},

			{
				"command": "homebrew.checkChecksums",
				"title": "Homebrew: Check Checksums"
			},
			{
				"command": "homebrew.updateChecksum",
				"title": "Homebrew: Update Checksum"
			},
			{
				"command": "homebrew.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},

			{
				"command": "homebrew.openTap",
				"title": "Homebrew: Open Tap as Workspace"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "homebrew-explorer",
					"title": "Homebrew",
					"icon": "$(beaker)"
				}
			]
		},
		"views": {
			"homebrew-explorer": [
				{
					"id": "homebrewView",
					"name": "Homebrew"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "homebrew.refresh",
					"when": "view == homebrewView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "homebrew.edit",
					"when": "view == homebrewView && viewItem == formula",
					"title": "Edit (Open Source)"
				},
				{
					"command": "homebrew.info",
					"when": "view == homebrewView && viewItem == formula"
				},
				{
					"command": "homebrew.audit",
					"when": "view == homebrewView && viewItem == formula"
				},
				{
					"command": "homebrew.livecheck",
					"when": "view == homebrewView && viewItem == formula"
				},
				{
					"command": "homebrew.installSource",
					"when": "view == homebrewView && viewItem == formula",
					"title": "Build from Source"
				},
				{
					"command": "homebrew.openTap",
					"when": "view == homebrewView && viewItem == tap",
					"title": "Open as Workspace"
				}
			],
			"editor/title": [
				{
					"command": "homebrew.installSource",
					"when": "resourceLangId == ruby",
					"group": "navigation",
					"title": "Compile (Source)",
					"icon": "$(package)"
				},
				{
					"command": "homebrew.updateChecksum",
					"when": "resourceLangId == ruby",
					"title": "Update Checksum"
				},
				{
					"command": "homebrew.styleFix",
					"when": "resourceLangId == ruby",
					"group": "navigation",
					"title": "Fix Style"
				},
				{
					"command": "homebrew.audit",
					"when": "resourceLangId == ruby",
					"group": "navigation",
					"title": "Audit"
				},
				{
					"command": "homebrew.test",
					"when": "resourceLangId == ruby",
					"group": "navigation",
					"title": "Test"
				}
			]
		},
		"configuration": {
			"title": "Homebrew Helper",
			"properties": {
				"homebrew.codeLens.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable CodeLens in Homebrew files"
				},
				"homebrew.codeLens.install.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable 'Install' CodeLens"
				},
				"homebrew.codeLens.audit.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable 'Audit' CodeLens"
				},
				"homebrew.codeLens.test.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable 'Test' CodeLens"
				},
				"homebrew.codeLens.updateChecksum.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable 'Update Checksum' CodeLens"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"check-types": "tsc --noEmit",
		"lint": "biome lint",
		"check": "biome check --write",
		"ci": "biome ci",
		"deploy": "vsce publish",
		"release": "vsce package"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/node": "25.x",
		"@types/vscode": "^1.103.1",
		"esbuild": "^0.27.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	}
}
